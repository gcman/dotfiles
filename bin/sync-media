#!/bin/sh
dirs="music videos pictures books org"
drive="/media/501b6655-ac04-4e1e-b921-67e8947b2d84"
exclude_file=".cache/rsync-exclude.txt"
excludes="$dirs dotfiles school Camera"
if [ -d "$drive" ]; then
    :> ~/$exclude_file
    for dir in $excludes
    do
        echo "$dir" >> ~/$exclude_file
    done

    for dir in $dirs
    do
        rsync -hauv --no-links --progress --exclude /.git ~/$dir/ $drive/$dir
    done

    rsync -hauv --no-links --progress ~/Camera/ $drive/pictures/Camera

    for f in ~/videos/YouTube/*; do
        if [ -d "$f" ]; then
            rm -rf "$f"
        fi
    done

    rsync -hauv --progress --exclude-from ".cache/rsync-exclude.txt" ~/ $drive/home
else
    echo "Drive location not found!"
fi
